<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robles.roblesquiz.MainActivity">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="306dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="107dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/icon"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="52dp" />

    <Button
        android:id="@+id/btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_pass"
        android:layout_alignRight="@+id/et_pass"
        android:layout_below="@+id/et_pass"
        android:layout_marginTop="17dp"
        android:text="Login"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="372dp"
        android:onClick="nextActivity"/>

    <Button
        android:id="@+id/btn_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_pass"
        android:layout_alignStart="@+id/et_pass"
        android:layout_alignTop="@+id/btn_log"
        android:text="Remember Me"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="372dp"
        android:onClick="Save"/>
</RelativeLayout>
